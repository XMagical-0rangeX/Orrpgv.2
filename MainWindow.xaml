                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="122.005"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
            </Canvas>
        </Grid>
        <Grid x:Name="Blacksmith" Background="Black" Visibility="Hidden">
